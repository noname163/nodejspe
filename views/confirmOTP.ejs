<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <section class="h-100">
      <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
          <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
            <div class="text-center my-5">
              <img
                src="https://static.vecteezy.com/system/resources/previews/013/366/678/original/foot-ball-or-soccer-ball-icon-symbol-for-art-illustration-logo-website-apps-pictogram-news-infographic-or-graphic-design-element-format-png.png"
                alt="logo"
                width="80"
              />
            </div>
            <div class="card shadow-lg">
              <div class="card-body p-5">
                <% if (typeof errors !== 'undefined' && Array.isArray(errors) && errors.length > 0) { %> <%
                errors.forEach(function (error) { %>
                <div class="alert alert-warning alert-dismissible" role="alert"><%= error %></div>
                <% }); %> <% } %> <% if (typeof success !== 'undefined' && Array.isArray(success) && success.length > 0)
                { %> <% success.forEach(function (success) { %>
                <div class="alert alert-success alert-dismissible" role="alert"><%= success %></div>
                <% }); %> <% } %>
                <h1 class="fs-4 card-title fw-bold mb-4">Confirm OTP</h1>
                <form method="POST" action="/auth/confirmOTP">
                  <div class="mb-3" hidden>
                    <label class="mb-2 text-muted" for="email">Email</label>
                    <input
                      id="email"
                      type="email"
                      class="form-control"
                      name="email"
                      value="<%= typeof email !== 'undefined' ? email : '' %>"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="mb-2 text-muted" for="otp">OTP</label>
                    <input id="otp" type="text" class="form-control" name="otp" required maxlength="6" autofocus />
                  </div>

                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn btn-primary ms-auto">Send OTP</button>
                  </div>
                </form>
              </div>
              <div class="card-footer py-3 border-0">
                <form method="POST" action="/auth/resendOTP">
                  <input type="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" hidden />
                  <div class="text-center">
                    Not receive code ? <button type="submit" class="btn btn-link">Resend Code</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="text-center mt-5 text-muted">Copyright &copy; 2022-2023 &mdash; Huy Company</div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
