<% if (typeof errors !='undefined' ) { %>
    <% errors.forEach(function (error){ %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <%= error.msg %>
      </div>
      <% }); %>
        <% } %>
<div id="body" class="container mt-4 mb-4 p-3 d-flex justify-content-center shadow-sm p-3 mb-5">
    <div class="card p-4" style="width: 500px; height: 520px">
      <div class="image d-flex flex-column  align-items-center">
        <h1>PROFILE</h1>
                <img src="<%= user.image %>" class="rounded img-thumbnail"
                  style="max-width: 75%; min-height: 20%; max-height: 40%" />

                <span class="name mt-3">Email: <%= user.email %></span>
                <span class="name mt-3">Name: <%= user.name %></span>
                <span class="name mt-3">DOB: <%= user.dob.toLocaleDateString('en-GB', { day: '2-digit' ,
                    month: '2-digit' , year: 'numeric' }) %></span>

                <div class="d-flex mt-2">
                  <button class="btn btn-success b-2 mt-2" data-bs-toggle="modal" data-bs-target="#playerAdd">
                    Edit Profile
                  </button>
                </div>
      </div>
    </div>
  </div>