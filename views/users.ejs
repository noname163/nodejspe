<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
      <h1 class="text-center">List of Users</h1>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Img</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Date Of Birth</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><img src="<%= user.image%>" style="width: 50px; height: 50px" /></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.dob.toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' }) %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <ul class="pagination">
        <% for( let a = 1; a <= pages; a++ ) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= a; %>"><%= a %></a>
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
